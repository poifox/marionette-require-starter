{
	"sass": {
		"dev": {
			"options": {
				"trace": true,
				"no-cache": true,
				"unixNewlines": true,
				"style": "nested"
			},
			"files": {
				"dist/styles.css": "css/styles.scss"
			}
		},
		"dist": {
			"options": {
				"trace": true,
				"no-cache": true,
				"unixNewlines": true,
				"style": "compressed"
			},
			"files": {
				"dist/styles.min.css": "css/styles.scss"
			}
		}
	},
	"requirejs": {
		"dev": {
			"options": {
				"baseUrl": "js/",
				"name": "vendor/almond/almond",
				"include": "main",
				"findNestedDependencies": true,
				"mainConfigFile": "js/main.js",
				"out": "dist/application.js",
				"optimize": "none"
			}
		},
		"dist": {
			"options": {
				"baseUrl": "js/",
				"name": "vendor/almond/almond",
				"include": "main",
				"findNestedDependencies": true,
				"mainConfigFile": "js/main.js",
				"out": "dist/application.js",
				"optimize": "uglify"
			}
		}
	}
}
